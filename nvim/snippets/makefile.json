{
	"Generic C++ Makefile": {
		"prefix": "mf",
		"body": [
			"CC = g++",
			"CFLAGS = -Wall",
			"LDLIBS = -lraylib",
			"TARGET = output.o",
			"SRCS = main.cpp",
			"OBJS = $(SRCS:.cpp=.o)",
			"all: $(TARGET)",
			"$(TARGET): $(OBJS)",
			"    $(CC) $(CFLAGS) -o $@ $^ $(LDLIBS)",
			"%.o: %.c",
			"    $(CC) $(CFLAGS) -c $< -o $@",
			"clean:",
			"    rm -f $(OBJS) $(TARGET)",
			".PHONY: all clean"
		],
		"description": "Generic C++ Makefile"
	}
}
